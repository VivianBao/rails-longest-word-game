<h1>Welcome to the longest word-game!</h1>
<h2>Here is your grid:</h2>
<%= @grid%>
<h2>What is your longest word?</h2>
<form action="/score" method="post">
  <input type="text" name='word' placeholder="Type your answer here!">
  <input type="submit" value="Play">
  <input id="token" name="grid" type="hidden" value='<%=@grid%>'/>
  <input id="token" name="time" type="hidden" value='<%=@start_time%>'/>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
